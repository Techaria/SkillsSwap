<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body class="bg-gradient-to-br from-gray-50 to-white text-gray-800">
  <div class="min-h-screen flex flex-col">
    <!-- Navbar Header -->
    <header class="bg-white shadow">
      <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
        <h1 class="text-xl font-bold text-gray-700">SkillSwap Hub</h1>
        <%- include('partials/navbar') %>
      </div>
      </header>
  <section class="max-w-7xl mx-auto px-6 py-10">
    <!-- Header -->
    <div class="text-center mb-10">
      <h1 class="text-4xl font-extrabold text-indigo-700">Skill Market</h1>
      <p class="mt-2 text-gray-600">Find skills, connect with peers, and trade using tokens.</p>
    </div>

    <!-- Filter Section -->
    <form method="GET" action="/market" class="flex flex-col sm:flex-row gap-4 justify-between mb-8">
      <input name="title" type="text" placeholder="Search by title..." class="w-full sm:w-1/3 px-4 py-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-400" />
      <input name="minTokens" type="number" placeholder="Min Tokens" class="w-full sm:w-1/4 px-4 py-2 border rounded-xl" />
      <input name="maxTokens" type="number" placeholder="Max Tokens" class="w-full sm:w-1/4 px-4 py-2 border rounded-xl" />
      <button class="bg-indigo-600 text-white px-6 py-2 rounded-xl hover:bg-indigo-700">Filter</button>
    </form>

    <!-- Skill Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% skills.forEach(skill => { %>
        <div class="bg-white rounded-2xl shadow-md p-6 hover:shadow-xl transition-shadow duration-300 relative">
          <!-- Profile Picture -->
          <div class="flex items-center mb-4">
            <span class="text-sm text-gray-600">User <%= skill.userId %></span>
          </div>

          <!-- Skill Info -->
          <h3 class="text-2xl font-semibold text-indigo-600 mb-2"><%= skill.title %></h3>
          <p class="text-gray-600 mb-4"><%= skill.description.length > 100 ? skill.description.slice(0, 100) + '...' : skill.description %></p>

          <!-- Token Info + Purchase -->
          <div class="flex justify-between items-center">
            <span class="bg-indigo-100 text-indigo-700 font-semibold px-3 py-1 rounded-full text-sm">ðŸ’° <%= skill.token_value %> Tokens</span>
            <form method="POST" action="/purchase-token/<%= skill.id %>">
              <button class="text-sm bg-green-500 text-white px-4 py-1 rounded-xl hover:bg-green-600">Buy</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
</body>
</html>
